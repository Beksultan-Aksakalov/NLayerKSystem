@model NLayerKSystem.WEB.Areas.Admin.Models.viewModel.SelectionViewModel

@using (Html.BeginForm("Create", "Selection", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

<div class="form-horizontal">
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Id)
	@Html.HiddenFor(model => model.CertificationPhoto)
	<div class="form-group">
		<label class="control-label col-md-2">Name</label>
		<div class="col-md-3">
			@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2">Education Name</label>
		<div class="col-md-3">
			@Html.DropDownListFor(model => model.EducationId, Model.EducationViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
		new { @class = "form-control col-md-2"})
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2">Experience | Compnay Name</label>
		<div class="col-md-3">
			@Html.DropDownListFor(model => model.ExperienceId, Model.ExperienceViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.CompanyName }),
		new { @class = "form-control col-md-2"})
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2">Training Resource</label>
		<div class="col-md-3">
			@Html.DropDownListFor(model => model.TrainingId, Model.TrainingViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Resource }),
		new { @class = "form-control col-md-2"})
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2">Certification Resource</label>
		<div class="col-md-3">
			@Html.DropDownListFor(model => model.CertificationTestId, Model.CertificationTestViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Resource }),
		new { @class = "form-control col-md-2"})
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2">Certification Photo</label>
		<div class="col-md-3">
			@Html.TextBoxFor(model => model.ImageFile, new { type = "file", accept = "image/x-png, image/gif, image/jpeg, image/jpg", htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2">Sport Programming Resourse</label>
		<div class="col-md-3">
			@Html.DropDownListFor(model => model.SportProgrammingId, Model.SportProgrammingViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Resourse }),
		new { @class = "form-control col-md-2"})
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Create" class="btn btn-success" />
		</div>
	</div>
</div>
}

