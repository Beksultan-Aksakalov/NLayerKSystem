@model NLayerKSystem.WEB.Areas.Admin.Models.viewModel.CityViewModel

@using (Ajax.BeginForm("Create", new { },
			new AjaxOptions
			{
				HttpMethod = "POST",
				InsertionMode = InsertionMode.InsertAfter
			},
			new { @class = "form-horizonral" }
			))

{
	@Html.AntiForgeryToken()

	<div class="form-inline">

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-inline" style="margin-left: 5px">
			@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-2", @placeholder = "City" } })
			@Html.DropDownListFor(model => model.CountryId, Model.CountryViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
			new { @class = "form-control col-md-2"})
			@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
			<input type="submit" value="Create" class="btn btn-success" style="margin-left:5px" />
		</div>
	</div>
}