@model NLayerKSystem.WEB.Areas.Admin.Models.viewModel.CityViewModel

@using ((Ajax.BeginForm("Edit", new { },
			new AjaxOptions
			{
				HttpMethod = "POST",
				InsertionMode = InsertionMode.InsertAfter
			},
			new { @class = "form-horizonral" }
			))
)
{
	@Html.AntiForgeryToken()

	<div class="modal-header">
		<a href="#" class="close" data-dismiss="modal">&times;</a>
		<h3 class="modal-title">Edit City</h3>
	</div>
	<div class="modal-body" style="margin-bottom: 30px">
		<div class="form-inline">
			<div class="form-inline" style="margin-left: 5px">
				@Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
				@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-2", @placeholder = "City" } })
				@Html.DropDownListFor(model => model.CountryId, Model.CountryViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
				new { @class = "form-control col-md-2"})
				@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
			</div>
		</div>		
	</div>
	<div class="modal-footer">
		<a href="#" class="btn btn-danger" data-dismiss="modal">Cancel</a>
		<input type="submit" value="Edit" class="btn btn-info" />
	</div>
}
