@model NLayerKSystem.WEB.Areas.Admin.Models.viewModel.ReviewViewModel

@using (Html.BeginForm("Edit", "Review", FormMethod.Post))
{
	@Html.AntiForgeryToken()

	<div class="modal-header">
		<a href="#" class="close" data-dismiss="modal">&times;</a>
		<h3 class="modal-title">Edit Review</h3>
	</div>
	<div class="modal-body" style="margin-bottom: 20px">
		<div class="form-horizontal">

			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.Id)
			<div class="form-group">
				@Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-3">
					@Html.TextAreaFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">User</label>
				<div class="col-md-5">
					@Html.DropDownListFor(model => model.UserId, Model.UserViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
					new { @class = "form-control col-md-2"})
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-4">
					<input type="submit" value="Create" class="btn btn-success" />
				</div>
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<a href="#" class="btn btn-danger" data-dismiss="modal">Cancel</a>
		<input type="submit" value="Edit" class="btn btn-info" />
	</div>

}

