@model NLayerKSystem.WEB.Models.viewModel.UserViewModel


@using (Html.BeginForm("Create", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-bottom:200px;">

	<div class="form-group">
		<p style="color:red">@TempData["data"]</p>
	</div>

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Id)
	@Html.HiddenFor(model => model.Photo)
	<div class="form-group">
		@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-3">
			@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-3">
			@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-3">
			@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-3">
			@Html.TextBoxFor(model => model.ImageFile, new { type = "file", accept = "image/x-png, image/gif, image/jpeg, image/jpg", htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2">City</label>
		<div class="col-md-3">
			@Html.DropDownListFor(model => model.CityId, Model.CityViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
			new { @class = "form-control col-md-2"})
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-md-2">Role</label>
		<div class="col-md-3">
			@Html.DropDownListFor(model => model.RoleId, Model.RoleViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
			new { @class = "form-control col-md-2"})
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-2">
			<input type="submit" value="Register" class="btn btn-success" />
		</div>
		<div class="col-md-2">
			<a href="@Url.Action("Login","Account")" class="btn btn-default">Sign in</a>
		</div>
	</div>

	<h4 style="color:cornflowerblue">Если вы зарегистрированы, то нажмите на кнопку Sign in</h4>

	<div class="form-group">

	</div>
</div>
}
