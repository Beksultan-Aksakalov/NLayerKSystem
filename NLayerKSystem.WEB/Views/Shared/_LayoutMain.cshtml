<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	<script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<link href="~/Areas/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/Areas/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
	<link href="~/Scripts/bootstrap.min.js" rel="stylesheet">
	<link href="~/Scripts/bootstrap.js" rel="stylesheet">

	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<style>
		.footer {
			position: sticky;
			left: 0;
			bottom: 0;
			width: 100%;
			background-color: cadetblue;
			color: white;
			text-align: center;
		}
	</style>
</head>
<body>

	<div class="navbar navbar-inverse navbar-fixed-top" style="background-color:white; border-bottom-color:lightgray;">
			<div class="icon col-sm-12">

				<div class="col-sm-8" style="padding: 10px 0 0 0;">
					<a href="@Url.Action("Index","Home")" style="text-decoration: none; color: gray; font-size: 18px; margin-left:180px;">
						<img src="~/img/graduation.png" alt="graduation" width="30" height="30">
						KSystem
					</a>
				</div>
				@if (User.Identity.IsAuthenticated)
				{
					<div class="col-sm-4" style="margin-top: 9px">
						<p>
							Welcome @(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")
							<a href="@Url.Action("SignOut", "Account")" class="btn btn-default" style="float: right; color:black; margin-right: 150px">Sign out</a>
						</p>
					</div>
				}
			</div>
		</div>
	
	<div class="container body-content">
		@RenderBody()
	</div>
	<footer>
		<hr />
		<p style="text-align:center;">&copy; @DateTime.Now.Year - Epam. axakalov.b@gmail.com</p>
	</footer>


	<script src="~/Scripts/jquery-1.10.2.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Areas/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="~/Scripts/jquery.validate.min.js"></script>
	<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)

</body>
</html>
