@model NLayerKSystem.WEB.Models.viewModel.CertificationViewModel

@using (Html.BeginForm("CrCreate", "Candidate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<div class="modal-header">
		<a href="#" class="close" data-dismiss="modal">&times;</a>
		<h3 class="modal-title">Create Training</h3>
	</div>
	<div class="modal-body" style="margin-bottom: 20px">
		<div class="form-horizontal">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.Id)
			@Html.HiddenFor(model => model.CertificationPhoto)
			<div class="form-group">
				@Html.LabelFor(model => model.Resource, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-3">
					@Html.EditorFor(model => model.Resource, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Resource, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">Final Evaluation</label>
				<div class="col-md-3">
					@Html.EditorFor(model => model.Evaluation, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Evaluation, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">Project Photo</label>
				<div class="col-md-3">
					@Html.TextBoxFor(model => model.ImageFile, new { type = "file", accept = "image/x-png, image/gif, image/jpeg, image/jpg", htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.ImageFile, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">City</label>
				<div class="col-md-3">
					@Html.DropDownListFor(model => model.CityId, Model.CityViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
				new { @class = "form-control col-md-2"})
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">Knowledge</label>
				<div class="col-md-3">
					@Html.DropDownListFor(model => model.KnowledgeId, Model.KnowledgeViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
				new { @class = "form-control col-md-2"})
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">User</label>
				<div class="col-md-3">
					@Html.DropDownListFor(model => model.UserId, Model.UserViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
				new { @class = "form-control col-md-2"})
				</div>
			</div>

		</div>
		
	</div>
	<div class="modal-footer">
		<a href="#" class="btn btn-danger" data-dismiss="modal">Cancel</a>
		<input type="submit" value="Create" class="btn btn-info" />
	</div>
}