@model NLayerKSystem.WEB.Models.viewModel.SportProgrammingViewModel

@using (Html.BeginForm("SpCreate", "Candidate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<div class="modal-header">
		<a href="#" class="close" data-dismiss="modal">&times;</a>
		<h3 class="modal-title">Create Sport Programming</h3>
	</div>
	<div class="modal-body" style="margin-bottom: 20px">
		<div class="form-horizontal">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.Id)
			<div class="form-group">
				@Html.LabelFor(model => model.Resourse, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-3">
					@Html.EditorFor(model => model.Resourse, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Resourse, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">Level</label>
				<div class="col-md-3">
					@Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">City</label>
				<div class="col-md-3">
					@Html.DropDownListFor(model => model.CityId, Model.CityViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
				new { @class = "form-control col-md-2"})
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">Knowledge</label>
				<div class="col-md-3">
					@Html.DropDownListFor(model => model.KnowledgeId, Model.KnowledgeViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
				new { @class = "form-control col-md-2"})
				</div>
			</div>

			<div class="form-group">
				<label class="control-label col-md-2">User</label>
				<div class="col-md-3">
					@Html.DropDownListFor(model => model.UserId, Model.UserViewModels.Select(m => new SelectListItem() { Value = m.Id.ToString(), Text=m.Name }),
				new { @class = "form-control col-md-2"})
				</div>
			</div>

		</div>
	</div>
	<div class="modal-footer">
		<a href="#" class="btn btn-danger" data-dismiss="modal">Cancel</a>
		<input type="submit" value="Create" class="btn btn-info" />
	</div>
}

